<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    <style>
        .clickable-card {
            transition: all 0.3s ease;
            cursor: pointer;
        }
        .clickable-card:hover {
            transform: translateY(-2px);
        }
        .clicked {
            background: black !important;
            color: white !important;
        }
        .clicked .text-gray-600 {
            color: rgba(255, 255, 255, 0.8) !important;
        }
        .clicked .text-gray-900 {
            color: white !important;
        }
        .nav-clicked {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
            color: white !important;
        }
        .nav-clicked .text-gray-600 {
            color: rgba(255, 255, 255, 0.8) !important;
        }
        .nav-clicked span {
            color: white !important;
        }
        .info-card {
            transition: all 0.3s ease;
            cursor: pointer;
        }
        .info-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }
    </style>
</head>
<body class="bg-gray-50">
    <div class="min-h-screen p-4 md:p-6 lg:p-8">
        <div class="max-w-7xl mx-auto space-y-6">
            <!-- Header -->
            <div class="mb-8">
                <h1 class="text-2xl md:text-3xl font-bold text-gray-900 mb-2">Admin Dashboard</h1>
                <p class="text-gray-600 text-sm md:text-base">Real time safety monitoring and management</p>
            </div>

            <!-- Top Metrics Row - Only hover effect, no black background -->
            <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6">
                <div class="bg-white shadow-lg hover:shadow-xl rounded-lg border info-card">
                    <div class="p-2 md:p-3">
                        <div class="flex items-center space-x-3">
                            <div class="p-1.5 bg-red-100 rounded-lg">
                                <i data-lucide="alert-triangle" class="h-4 w-4 md:h-5 md:w-5 text-red-600"></i>
                            </div>
                            <div>
                                <p class="text-xs md:text-sm text-gray-600 mb-0.5">Active SOS</p>
                                <p class="text-lg md:text-xl font-bold text-gray-900">1</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-white shadow-lg hover:shadow-xl rounded-lg border info-card">
                    <div class="p-2 md:p-3">
                        <div class="flex items-center space-x-3">
                            <div class="p-1.5 bg-red-100 rounded-lg">
                                <i data-lucide="file-text" class="h-4 w-4 md:h-5 md:w-5 text-red-600"></i>
                            </div>
                            <div>
                                <p class="text-xs md:text-sm text-gray-600 mb-0.5">Reports</p>
                                <p class="text-lg md:text-xl font-bold text-gray-900">1</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-white shadow-lg hover:shadow-xl rounded-lg border info-card">
                    <div class="p-2 md:p-3">
                        <div class="flex items-center space-x-3">
                            <div class="p-1.5 bg-green-100 rounded-lg">
                                <i data-lucide="activity" class="h-4 w-4 md:h-5 md:w-5 text-green-600"></i>
                            </div>
                            <div>
                                <p class="text-xs md:text-sm text-gray-600 mb-0.5">Active Volunteers</p>
                                <p class="text-lg md:text-xl font-bold text-gray-900">1</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-white shadow-lg hover:shadow-xl rounded-lg border info-card">
                    <div class="p-2 md:p-3">
                        <div class="flex items-center space-x-3">
                            <div class="p-1.5 bg-blue-100 rounded-lg">
                                <i data-lucide="users" class="h-4 w-4 md:h-5 md:w-5 text-blue-600"></i>
                            </div>
                            <div>
                                <p class="text-xs md:text-sm text-gray-600 mb-0.5">Total Volunteers</p>
                                <p class="text-lg md:text-xl font-bold text-gray-900">1</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Navigation Buttons - Keep functional clicking -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <button class="nav-button h-12 md:h-14 flex items-center justify-start space-x-3 bg-white border border-gray-300 rounded-lg px-4 hover:bg-gray-50 transition-colors shadow-md hover:shadow-lg clickable-card" onclick="toggleButton(this)">
                    <i data-lucide="map-pin" class="h-5 w-5 text-gray-600"></i>
                    <span class="text-sm md:text-base">Live Map</span>
                </button>
                <button class="nav-button h-12 md:h-14 flex items-center justify-start space-x-3 bg-white border border-gray-300 rounded-lg px-4 hover:bg-gray-50 transition-colors shadow-md hover:shadow-lg clickable-card" onclick="toggleButton(this)">
                    <i data-lucide="user-check" class="h-5 w-5 text-gray-600"></i>
                    <span class="text-sm md:text-base">Volunteers</span>
                </button>
                <button class="nav-button h-12 md:h-14 flex items-center justify-start space-x-3 bg-white border border-gray-300 rounded-lg px-4 hover:bg-gray-50 transition-colors shadow-md hover:shadow-lg clickable-card" onclick="toggleButton(this)">
                    <i data-lucide="bar-chart-3" class="h-5 w-5 text-gray-600"></i>
                    <span class="text-sm md:text-base">History & Analysis</span>
                </button>
            </div>

            <!-- Incident History & Analysis -->
            <div class="bg-white shadow-lg rounded-lg border">
                <div class="p-4 md:p-6">
                    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-6">
                        <h2 class="text-lg md:text-xl font-semibold text-gray-900 mb-4 md:mb-0">
                            Incident History & Analysis
                        </h2>
                        <!-- Keep functional filter buttons -->
                        <div class="flex space-x-2">
                            <button class="time-filter px-3 py-1.5 bg-black text-white text-sm rounded-md hover:bg-gray-800 transition-colors shadow-md clickable-card" onclick="toggleTimeFilter(this)">
                                7 Days
                            </button>
                            <button class="time-filter px-3 py-1.5 border border-gray-300 text-gray-700 text-sm rounded-md hover:bg-gray-50 transition-colors shadow-md clickable-card" onclick="toggleTimeFilter(this)">
                                30 Days
                            </button>
                            <button class="time-filter px-3 py-1.5 border border-gray-300 text-gray-700 text-sm rounded-md hover:bg-gray-50 transition-colors shadow-md clickable-card" onclick="toggleTimeFilter(this)">
                                90 Days
                            </button>
                        </div>
                    </div>

                    <!-- Analysis cards - Only hover effect, no black background -->
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6">
                        <div class="bg-gray-50 rounded-lg border shadow-md hover:shadow-lg info-card">
                            <div class="p-4">
                                <div class="flex items-center space-x-3">
                                    <div class="p-2 bg-green-100 rounded-lg">
                                        <i data-lucide="activity" class="h-5 w-5 text-green-600"></i>
                                    </div>
                                    <div>
                                        <p class="text-xs text-gray-600 mb-1">Total Incident</p>
                                        <p class="text-xl font-bold text-gray-900">1</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="bg-gray-50 rounded-lg border shadow-md hover:shadow-lg info-card">
                            <div class="p-4">
                                <div class="flex items-center space-x-3">
                                    <div class="p-2 bg-red-100 rounded-lg">
                                        <i data-lucide="alert-triangle" class="h-5 w-5 text-red-600"></i>
                                    </div>
                                    <div>
                                        <p class="text-xs text-gray-600 mb-1">SOS Alerts</p>
                                        <p class="text-xl font-bold text-gray-900">1</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="bg-gray-50 rounded-lg border shadow-md hover:shadow-lg info-card">
                            <div class="p-4">
                                <div class="flex items-center space-x-3">
                                    <div class="p-2 bg-green-100 rounded-lg">
                                        <i data-lucide="clock" class="h-5 w-5 text-green-600"></i>
                                    </div>
                                    <div>
                                        <p class="text-xs text-gray-600 mb-1">Resolution Rate</p>
                                        <p class="text-xl font-bold text-green-600">100%</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- High Risk Junction Analysis - Only hover effect, no black background -->
            <div class="bg-white shadow-lg rounded-lg border">
                <div class="p-4 md:p-6">
                    <h2 class="text-lg md:text-xl font-semibold text-gray-900 mb-6">High Risk Junction Analysis</h2>
                    <div class="space-y-4">
                        <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg shadow-md hover:shadow-lg info-card">
                            <div class="flex items-center space-x-3">
                                <div class="w-3 h-3 rounded-full bg-red-500"></div>
                                <div>
                                    <p class="font-medium text-gray-900">Durga nagar</p>
                                    <p class="text-sm text-gray-600">12 incidents in selected period</p>
                                </div>
                            </div>
                            <span class="px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                High Risk
                            </span>
                        </div>

                        <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg shadow-md hover:shadow-lg info-card">
                            <div class="flex items-center space-x-3">
                                <div class="w-3 h-3 rounded-full bg-red-500"></div>
                                <div>
                                    <p class="font-medium text-gray-900">Durga nagar</p>
                                    <p class="text-sm text-gray-600">12 incidents in selected period</p>
                                </div>
                            </div>
                            <span class="px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                High Risk
                            </span>
                        </div>

                        <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg shadow-md hover:shadow-lg info-card">
                            <div class="flex items-center space-x-3">
                                <div class="w-3 h-3 rounded-full bg-blue-500"></div>
                                <div>
                                    <p class="font-medium text-gray-900">Durga nagar</p>
                                    <p class="text-sm text-gray-600">12 incidents in selected period</p>
                                </div>
                            </div>
                            <span class="px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                Medium Risk
                            </span>
                        </div>

                        <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg shadow-md hover:shadow-lg info-card">
                            <div class="flex items-center space-x-3">
                                <div class="w-3 h-3 rounded-full bg-green-500"></div>
                                <div>
                                    <p class="font-medium text-gray-900">Durga nagar</p>
                                    <p class="text-sm text-gray-600">12 incidents in selected period</p>
                                </div>
                            </div>
                            <span class="px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                Low Risk
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Incident History -->
            <div class="bg-white shadow-lg rounded-lg border">
                <div class="p-4 md:p-6">
                    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-6">
                        <h2 class="text-lg md:text-xl font-semibold text-gray-900 mb-4 md:mb-0">Incident History</h2>
                        <!-- Keep functional filter buttons -->
                        <div class="flex flex-wrap gap-2">
                            <button class="history-filter px-3 py-1.5 bg-black text-white text-sm rounded-md hover:bg-gray-800 transition-colors shadow-md clickable-card" onclick="toggleHistoryFilter(this)">
                                All Types
                            </button>
                            <button class="history-filter px-3 py-1.5 border border-gray-300 text-gray-700 text-sm rounded-md hover:bg-gray-50 transition-colors shadow-md clickable-card" onclick="toggleHistoryFilter(this)">
                                SOS Only
                            </button>
                            <button class="history-filter px-3 py-1.5 border border-gray-300 text-gray-700 text-sm rounded-md hover:bg-gray-50 transition-colors shadow-md clickable-card" onclick="toggleHistoryFilter(this)">
                                Reports Only
                            </button>
                        </div>
                    </div>

                    <!-- Incident entries - Only hover effect, no black background -->
                    <div class="space-y-4">
                        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg shadow-md hover:shadow-lg info-card">
                            <div class="flex items-center space-x-3">
                                <div class="p-2 bg-gray-200 rounded-full">
                                    <i data-lucide="user" class="h-4 w-4 text-gray-600"></i>
                                </div>
                                <div>
                                    <p class="font-medium text-gray-900">Durga nagar</p>
                                    <p class="text-sm text-gray-600">2025-06-18 at 9:15 PM</p>
                                </div>
                            </div>
                            <div class="flex flex-wrap gap-2">
                                <span class="px-2 py-1 bg-red-100 text-red-800 text-xs font-medium rounded">SOS</span>
                                <span class="px-2 py-1 bg-red-100 text-red-800 text-xs font-medium rounded">High</span>
                                <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-medium rounded">Resolved</span>
                            </div>
                        </div>

                        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg shadow-md hover:shadow-lg info-card">
                            <div class="flex items-center space-x-3">
                                <div class="p-2 bg-gray-200 rounded-full">
                                    <i data-lucide="user" class="h-4 w-4 text-gray-600"></i>
                                </div>
                                <div>
                                    <p class="font-medium text-gray-900">Durga nagar</p>
                                    <p class="text-sm text-gray-600">2025-06-18 at 9:15 PM</p>
                                </div>
                            </div>
                            <div class="flex flex-wrap gap-2">
                                <span class="px-2 py-1 bg-gray-100 text-gray-800 text-xs font-medium rounded">Report</span>
                                <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs font-medium rounded">Medium</span>
                                <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-medium rounded">Resolved</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Initialize Lucide icons
        lucide.createIcons();

        // Function to toggle navigation buttons (exclusive selection with gradient background)
        function toggleButton(element) {
            // Remove nav-clicked class from all navigation buttons
            const navButtons = document.querySelectorAll('.nav-button');
            navButtons.forEach(button => {
                button.classList.remove('nav-clicked');
            });
            
            // Add nav-clicked class to the current button
            element.classList.add('nav-clicked');
        }

        // Function to toggle time filter buttons (exclusive selection with black background)
        function toggleTimeFilter(element) {
            // Remove clicked class from all time filter buttons
            const timeButtons = document.querySelectorAll('.time-filter');
            timeButtons.forEach(button => {
                button.classList.remove('clicked');
                button.classList.remove('bg-black', 'text-white');
                button.classList.add('border', 'border-gray-300', 'text-gray-700');
            });
            
            // Add clicked class to the current button
            element.classList.add('clicked');
            element.classList.remove('border', 'border-gray-300', 'text-gray-700');
            element.classList.add('bg-black', 'text-white');
        }

        // Function to toggle history filter buttons (exclusive selection with black background)
        function toggleHistoryFilter(element) {
            // Remove clicked class from all history filter buttons
            const historyButtons = document.querySelectorAll('.history-filter');
            historyButtons.forEach(button => {
                button.classList.remove('clicked');
                button.classList.remove('bg-black', 'text-white');
                button.classList.add('border', 'border-gray-300', 'text-gray-700');
            });
            
            // Add clicked class to the current button
            element.classList.add('clicked');
            element.classList.remove('border', 'border-gray-300', 'text-gray-700');
            element.classList.add('bg-black', 'text-white');
        }
    </script>
</body>
</html>
