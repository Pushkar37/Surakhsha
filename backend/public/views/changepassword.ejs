<body class="backdrop-blur-sm bg-black/30  flex items-center justify-center">
    <div class="min:p-4 md:p-6 lg:p-8  min-h-screen  flex jusitify-center items-center ">
     <div class="max-w-7xl flex justify-center items-center  ">
       <div class="mb-10 w-7xl flex justify-center items-center p-3 ">
        <div class="bg-white flex flex-col items-center  gap-3 rounded-lg shadow-lg p-4 w-[50%]   " >
              <h1 class="text-3xl p-3 text-center">Change Password</h1>
              <form action="/user/changepassword?_method=PATCH" class="p-2" method="POST">

                  <div class="text-xl font-semibold m-1 ">
                      userID:
                    </div>
                    <div class="border-2 border-black  rounded-md">
                        <input type="email" class="w-[100%] p-2 cursor-pointer bg-gray-100  " name="email" readonly value=<%= email %>>
                        <input type="text" class="hidden  " name="userId" readonly value=<%= id %>>

                    </div>
                    <div class="text-xl font-semibold m-1">
                        New password:
                    </div>
                    <div class="border-2 border-black  rounded-md m-1">
                        <input type="password" class="w-[100%] p-2 bg-gray-100   " name="password" placeholder="Enter your password">
                    </div>
                    <button type="submit" class="p-2 m-1 bg-black text-white font-semibold rounded-lg cursor-pointer"> Change passsword</button>
                </form>
        </div> 
